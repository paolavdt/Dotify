<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/screen_padding"
    android:background="@drawable/grad_pg_background"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ProfileFragment">

    <TextView
        android:id="@+id/tvError"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="There was an error fetching user profile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/ivProfileImage"
        android:layout_width="@dimen/image_width"
        android:layout_height="@dimen/profile_image_height"
        android:layout_marginTop="40dp"
        android:background="@drawable/rounded_profile"
        app:layout_constraintDimensionRatio="1:1"
        android:contentDescription="@string/profile_image_desc"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tvProfileUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/song_title_size"
        android:paddingTop="20dp"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/ivProfileImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tvProfileAge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:text="71, London"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/tvProfileUsername"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="visible" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clProfileNameContainer"
        android:layout_width="350dp"
        android:layout_height="85dp"
        android:layout_marginTop="60dp"
        app:layout_constraintTop_toBottomOf="@id/tvProfileAge"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/white"
        android:elevation="10dp">

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/ic_baseline_person_24"
            app:layout_constraintStart_toStartOf="@id/clProfileNameContainer"
            app:layout_constraintEnd_toStartOf="@id/ivNameLine"
            app:layout_constraintTop_toTopOf="@id/clProfileNameContainer"
            app:layout_constraintBottom_toBottomOf="@id/clProfileNameContainer"
            />

        <ImageView
            android:id="@+id/ivNameLine"
            android:layout_width="2dp"
            android:layout_height="75dp"
            android:background="@color/light_gray"
            android:layout_marginLeft="80dp"
            app:layout_constraintTop_toTopOf="@id/clProfileNameContainer"
            app:layout_constraintBottom_toBottomOf="@id/clProfileNameContainer"
            app:layout_constraintStart_toStartOf="@id/clProfileNameContainer" />

        <TextView
            android:id="@+id/tvNameTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textSize="@dimen/profile_username"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            app:layout_constraintTop_toTopOf="@id/clProfileNameContainer"
            app:layout_constraintStart_toStartOf="@id/ivNameLine" />

        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            app:layout_constraintTop_toBottomOf="@id/tvNameTitle"
            app:layout_constraintStart_toStartOf="@id/ivNameLine" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clProfileNoseContainer"
        android:layout_width="350dp"
        android:layout_height="85dp"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/clProfileNameContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/white"
        android:elevation="10dp">

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/ic_baseline_touch_app_24"
            app:layout_constraintStart_toStartOf="@id/clProfileNoseContainer"
            app:layout_constraintEnd_toStartOf="@id/ivNoseLine"
            app:layout_constraintTop_toTopOf="@id/clProfileNoseContainer"
            app:layout_constraintBottom_toBottomOf="@id/clProfileNoseContainer" />

        <ImageView
            android:id="@+id/ivNoseLine"
            android:layout_width="2dp"
            android:layout_height="75dp"
            android:background="@color/light_gray"
            android:layout_marginLeft="80dp"
            app:layout_constraintTop_toTopOf="@id/clProfileNoseContainer"
            app:layout_constraintBottom_toBottomOf="@id/clProfileNoseContainer"
            app:layout_constraintStart_toStartOf="@id/clProfileNoseContainer" />

        <TextView
            android:id="@+id/tvNoseTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Has Nose?"
            android:textSize="@dimen/profile_username"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            app:layout_constraintTop_toTopOf="@id/clProfileNoseContainer"
            app:layout_constraintStart_toStartOf="@id/ivNoseLine" />

        <TextView
            android:id="@+id/tvNose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            app:layout_constraintTop_toBottomOf="@+id/tvNoseTitle"
            app:layout_constraintStart_toStartOf="@id/ivNoseLine" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clProfilePlatformContainer"
        android:layout_width="350dp"
        android:layout_height="85dp"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/clProfileNoseContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/white"
        android:elevation="10dp">

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/ic_baseline_computer_24"
            app:layout_constraintStart_toStartOf="@id/clProfilePlatformContainer"
            app:layout_constraintEnd_toStartOf="@id/ivPlatformLine"
            app:layout_constraintTop_toTopOf="@id/clProfilePlatformContainer"
            app:layout_constraintBottom_toBottomOf="@id/clProfilePlatformContainer" />

        <ImageView
            android:id="@+id/ivPlatformLine"
            android:layout_width="2dp"
            android:layout_height="75dp"
            android:background="@color/light_gray"
            android:layout_marginLeft="80dp"
            app:layout_constraintTop_toTopOf="@id/clProfilePlatformContainer"
            app:layout_constraintBottom_toBottomOf="@id/clProfilePlatformContainer"
            app:layout_constraintStart_toStartOf="@id/clProfilePlatformContainer" />

        <TextView
            android:id="@+id/tvPlatformTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Platform"
            android:textSize="@dimen/profile_username"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            app:layout_constraintTop_toTopOf="@id/clProfilePlatformContainer"
            app:layout_constraintStart_toStartOf="@id/ivPlatformLine" />

        <TextView
            android:id="@+id/tvPlatform"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            app:layout_constraintTop_toBottomOf="@id/tvPlatformTitle"
            app:layout_constraintStart_toStartOf="@id/ivPlatformLine" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>