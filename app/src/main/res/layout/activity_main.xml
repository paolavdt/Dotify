<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="USERNAME"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/btnChangeUser"
        app:layout_constraintBottom_toBottomOf="@id/btnChangeUser" />

    <Button
        android:id="@+id/btnChangeUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CHANGE USER"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ivAlbumCover"
        android:layout_width="0dp"
        android:layout_height="350dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnChangeUser"
        app:srcCompat="@drawable/funky_town_album_cover"
        app:layout_constraintDimensionRatio="1:1"/>

    <TextView
        android:id="@+id/tvSongTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Funkytown"
        android:textSize="25sp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/ivAlbumCover"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tvArtistName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lipps. inc"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginTop="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvSongTitle" />

    <TextView
        android:id="@+id/tvPlayCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="# plays"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvArtistName" />

    <ImageButton
        android:id="@+id/ibPrevTrack"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/ic_skip_prev"
        android:tint="#DEDEDE"
        android:background="@android:color/transparent"
        android:foreground="?selectableItemBackground"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/ibPlay"
        app:layout_constraintTop_toBottomOf="@id/tvPlayCount"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_chainStyle="spread" />

    <ImageButton
        android:id="@+id/ibPlay"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/ic_play_arrow"
        android:tint="#FFFFFF"
        android:background="@drawable/rounded_grey_background"
        android:foreground="?selectableItemBackground"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toEndOf="@+id/ibPrevTrack"
        app:layout_constraintEnd_toStartOf="@id/ibNextTrack"
        app:layout_constraintTop_toBottomOf="@id/tvPlayCount"
        app:layout_constraintBottom_toBottomOf="parent" />

    <ImageButton
        android:id="@+id/ibNextTrack"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/ic_skip_next"
        android:tint="#DEDEDE"
        android:background="@android:color/transparent"
        android:foreground="?selectableItemBackground"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toEndOf="@id/ibPlay"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvPlayCount"
        app:layout_constraintBottom_toBottomOf="parent" />

    <EditText
        android:id="@+id/etChangeUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="ENTER USERNAME HERE"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/btnChangeUser"
        app:layout_constraintBottom_toBottomOf="@id/btnChangeUser"
        android:visibility="gone" />

</androidx.constraintlayout.widget.ConstraintLayout>